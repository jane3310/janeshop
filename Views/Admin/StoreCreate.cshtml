@model Janeshop.Models.Store
@{
    ViewBag.Title = "StoreCreate";
     Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="h5 text-center text-info"><b>เพิ่มข้อมูลร้านค้า</b></div>
<div class="main-content">
    <!-- Page content -->
    @using (Html.BeginForm("StoreCreate", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="container-fluid mt--7">
            <div class="row">
                <div class="col-xl-12 order-xl-1">
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-12 text-center">
                                        <script type="text/javascript">
                                            function Pic01(input) {
                                                if (input.files && input.files[0]) {
                                                    var reader = new FileReader();

                                                    reader.onload = function (e) {
                                                        $('#image01').attr('src', e.target.result);
                                                    }

                                                    reader.readAsDataURL(input.files[0]);
                                                }
                                            }
                                        </script>
                                        <div class="text-center">
                                            <img id="image01" src="../Images/logo3.png" alt="" height="100" width="100" />
                                        </div><br />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-first-name">ชื่อร้านค้า <b style="color: red;"> *</b></label>
                                            @Html.EditorFor(model => model.store_name, new { htmlAttributes = new { id = "store_name", @class = "form-control col-lg-12", @placeholder = "ร้านสินค้า", required = true } })
                                            @Html.ValidationMessageFor(model => model.store_name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-last-name">ภาพประกอบ <b style="color: red;"> *</b></label>
                                            @Html.EditorFor(model => model.picture, new { htmlAttributes = new { @type = "file", @name = "picture", @id = "picture", @class = "form-control col-lg-12", @onchange = "Pic01(this);" }, required = true })
                                            @Html.ValidationMessageFor(model => model.picture, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-first-name">เบอร์โทร <b style="color: red;"> *</b></label>
                                            @Html.EditorFor(model => model.mobile, new { htmlAttributes = new { @class = "form-control col-lg-12", @placeholder = "เบอร์โทร", @type = "number", required = true } })
                                            @Html.ValidationMessageFor(model => model.mobile, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-first-name">ที่อยู่ </label>
                                            @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control col-lg-12", @rows = "2", @placeholder = "ที่อยู่" } })
                                            @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-first-name">ตำบล </label>
                                            @Html.DropDownList("district_id", (SelectList)ViewBag.district, "เลือกตำบล", new { @class = "form-control col-lg-12 dropdown-toggle text-left", required = true})

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-first-name">อีเมล์ </label>
                                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control col-lg-12", @type = "email", @placeholder = "อีเมล์" } })
                                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                            <small id="emailHelp" class="form-text text-muted">ตัวอย่าง : abc@example.com</small>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-first-name">รหัสผ่าน <b style="color: red;"> *</b></label>
                                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control col-lg-12", @placeholder = "รหัสผ่าน", required = true } })
                                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group has-success">
                                            <label class="form-control-label" for="input-first-name">ยืนยันรหัสผ่าน</label>
                                            @Html.Password("Confirmpassword", "", new { placeholder = "ยืนยันรหัสผ่าน", @class = "form-control col-lg-12" })
                                            @Html.ValidationMessageFor(model => model.Confirmpassword, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr class="my-4" />
                            <div class="container">
                                <p align="right">
                                    <button type="submit" class="btn btn-primary col-lg-3" onclick="return confirm('คุณต้องการที่จะบันทึกข้อมูล ใช่หรือไม่')">  --เพิ่มข้อมูล--  </button>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<br />
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}