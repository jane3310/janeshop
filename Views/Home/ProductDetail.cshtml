@model IEnumerable<Janeshop.Models.Product>
@{
    ViewBag.Title = "ProductShowDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<h4 class="text-center">รายละเอียดสินค้า</h4>

<div class="container-fluid mt--7">
    <div class="col-xl-12 order-xl-1">
        <div class="card shadow">
            <div class="card-body">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            @foreach (var itemp in Model)
                            {
                                List<string> result = itemp.tbl_product_picture.picture_url.Split(new char[] { ',' }).ToList();

                                foreach (var photo in result)
                                {
                                    if (itemp.tbl_product_picture.picture_url != null)
                                    {
                                        <img src="@Url.Content(photo)" style="height:250px;width:auto; border-radius:20px 20px 20px 20px;" />
                                    }
                                    else
                                    {
                                    }
                                }
                            }
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        @foreach (var item in Model)
                        {

                            <div class="col-lg-6 text-right">
                                ประเภทสินค้า<br />
                                ชื่อสินค้า<br />
                                รายละเอียด<br />
                                ราคา<br />
                            </div>
                            <div class="col-lg-6 text-left">
                                @Html.DisplayFor(model => item.tbl_product_type.type_name) <br />
                                @Html.DisplayFor(model => item.tbl_product.product_name) <br />
                                @Html.DisplayFor(model => item.tbl_product.product_detail)<br />
                                @Html.DisplayFor(model => item.tbl_product.price) บาท <br />
                            </div>
                        }
                        <br />
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-white text-info btn-block">ย้อนกลับ</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>